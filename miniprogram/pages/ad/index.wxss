.top-view{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.txt{
  background-color: #0c7;
  color: white;
  width: 300rpx;
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx; 
}
.btn{
  background-color: #0c7;
  color: white;
  width: 300rpx;
  display: flex;
  padding: 0rpx 30rpx;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx; 
}
.ad{
  margin-top: 200rpx;
  
}
.userinfo{
   background-color: white;
   border-radius:20rpx;
   width: 80%;
   margin: 200rpx 10%; 
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}
.score{
  font-size: 24rpx;
}